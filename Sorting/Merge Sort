/*
Merge Sort's time complexity is \(O(n\log n)\) because it takes logarithmic time to divide the array and linear time to merge the subarrays at each level.Â Worst-Case Time Complexity: \(O(n\log n)\)
Space Complexity: \(O(n)\) (due to the auxiliary temporary array used for merging)
*/

import java.util.*;

class Solution {
// merge func
    private static void merge(int[] arr, int low, int mid, int high) {
        ArrayList<Integer> temp = new ArrayList<>(); // temporary array
        int left = low;                            // starting index of left half of arr
        int right = mid + 1;                       // starting index of right half of arr

                                                           
        while (left <= mid && right <= high) {             //storing elements in the temporary array in a sorted manner
            if (arr[left] <= arr[right]) {              // left part of arr sorted is added to temp
                temp.add(arr[left]);
                left++;
            } else {
                temp.add(arr[right]);                 
                right++;
            }
        }

      
        while (left <= mid) {                       //right part of arr sorted is added to temp 
            temp.add(arr[left]);
            left++;
        }
        while (right <= high) {
            temp.add(arr[right]);
            right++;
        }
    
        for (int i = low; i <= high; i++) {        // transfering all elements from temporary to arr 
            arr[i] = temp.get(i - low);
        }
    }

//mergeSort func
    public static void mergeSort(int[] arr, int low, int high) {
        if (low >= high) return;
        int mid = (low + high) / 2 ;
        mergeSort(arr, low, mid);                                 // left half : divide & sort
        mergeSort(arr, mid + 1, high);                            // right half
        merge(arr, low, mid, high);                              // merging sorted halves
    }
}

// File name should be : Merge.java (main class)
public class Merge {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        int n = 7;
        int arr[] = { 9, 4, 7, 6, 3, 1, 5 };
        System.out.println("Before sorting array: ");
        for (int i = 0; i < n; i++) {
            System.out.print(arr[i] + " ");
        }
        System.out.println();

        Solution.mergeSort(arr, 0, n - 1);                  // Func call
        System.out.println("After sorting array: ");
        for (int i = 0; i < n; i++) {
            System.out.print(arr[i] + " ");
        }
        System.out.println();
    }

}
