class Solution {
    public int[] selectionSort(int[] nums) {
        int n = nums.length;

        // Traverse the array
        for (int i = 0; i < n - 1; i++) {
            int minIndex = i; // assume current index is minimum

            // Find index of the minimum element in the remaining array
            for (int j = i + 1; j < n; j++) {
                if (nums[j] < nums[minIndex]) {
                    minIndex = j;
                }
            }

            // Swap if a smaller element was found
            if (minIndex != i) {
                int temp = nums[i];
                nums[i] = nums[minIndex];
                nums[minIndex] = temp;
            }
        }

        return nums; // return sorted array
    }
}
